<div id = "message_form">
	<p id = 'text_area' >

	</p>
	<%= form_for(@order) do |f| %>
		<%= f.hidden_field :message, :value => "" %>
		<%= f.hidden_field :x, :value => "" %>
		<%= f.hidden_field :y, :value => "" %>

		<%= f.submit 'Submit', class: 'btn btn-primary' %>
	<% end %>

	<div id = "keyboard">
		<%= render partial: 'shared/glyph_button', collection: glyphs.order(:meaning), as: :glyph %>
	</div>
</div>