<% provide(:title, "TOWER TOWER TOWER") %>
<% provide(:head, javascript_include_tag("build_orders")) %>
<div id="craft">
	<div id="canvas"></div>
</div>

<div id = "panel">
	<div id = "alerts">
		<h4>Instructions</h4>
		Place your bricks on the tower to build it higher!
	</div>
	<br/>
	<div id = "bricks">
		<b>BRICKS</b><br/>
	</div>

	<div id = "messages">
		<h3>Build Orders</h3>
		<ul>
		<% @orders.each do |order| %>
			<li>
				<% order.message.split(" ").each do |glyph| %>
					<%= render partial: 'shared/glyph_read', locals: {glyph: @glyphs.find(glyph)} %>
				<% end %>
				<% unless order.user.nil? %>
					- <%= order.user.name %>
				<% else %>
					- A Mysterious Stranger
				<% end %>
			</li>
		<% end %>
		</ul>
	</div>
</div>